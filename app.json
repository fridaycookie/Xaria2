{
	"name": "Xaria",
	"description": "Run Xaria2 on heroku",
	"repository": "https://github.com/CypherpunkSamurai/xaria2",
	"keywords": ["xaria"],
	"stack": "container",
	"env": {
		"HTPASSWD": {
			"description": "http auth credential",
			"required": false
		},
		"SECRET": {
			"description": "rpc auth credential",
			"required": false
		},
		"RCLONE_CONFIG": {
			"description": "Rclone config to mount in one line, replace line breaks with \"\\n\"",
			"required": true
		},
		"RCLONE_DESTINATION": {
			"description": "Rclone upload destination",
			"required": true
		},
		"RCLONE_DESTINATION_2": {
			"description": "Rclone upload destination 2 (if configured)",
			"required": false
		}

	}
}